<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.acecom.track.systempest">

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".util.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login activity -->
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name" >
        </activity>

        <!-- QR activity -->
        <activity
            android:name=".QrCodeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name" >
        </activity>

        <!-- Inventory activity -->
        <activity
            android:name=".InventoryActivity"
            android:launchMode="singleInstance"
            android:label="@string/app_name" >
        </activity>

        <!-- Job activity -->
        <activity
            android:name=".JobActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Maintenance activity -->
        <activity
            android:name=".MaintenanceActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Maintenance activity -->
        <activity
            android:name=".HistoryActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Maintenance Job Details activity -->
        <activity
            android:name=".JobsDetailActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Maintenance Job Details activity -->
        <activity
            android:name=".HistoryDetailActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Maintenance Job Details activity -->
        <activity
            android:name=".MaintenanceDetailActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Job Details activity -->

        <!-- Job Details activity -->

        <service android:name=".util.LocationMonitoringService"/>
    </application>

</manifest>